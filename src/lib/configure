#!/bin/sh

CXXWRAP_DIR=/usr/local
FLINT_DIR=/usr/local
JULIA_DIR=/usr/local
SINGULAR_DIR=/usr/local

absolute_path() {
    dir="$1"
    case $dir in
        /*) dir=$dir;;
        *) dir=$PWD/$dir;;
    esac
    echo $dir
}

while [ "$1" != "" ]; do
    PARAM=`echo $1 | sed 's/=.*//'`
    VALUE=`echo $1 | sed 's/[^=]*//; s/=//'`
    case "$PARAM" in
        --enable-silent-rules)
            Q=@
            ;;
        --prefix)
            PREFIX="$VALUE"
            ;;
        --with-cxxwrap)
            CXXWRAP_DIR=$(absolute_path "$VALUE")
            ;;
        --with-flint)
            FLINT_DIR=$(absolute_path "$VALUE")
            ;;
        --with-julia)
            JULIA_DIR=$(absolute_path "$VALUE")
            ;;
        --with-singular)
            SINGULAR_DIR=$(absolute_path "$VALUE")
            ;;
        CC)
            CC="$VALUE"
            ;;
        CFLAGS)
            CFLAGS="$VALUE"
            ;;
        CXX)
            CXX="$VALUE"
            ;;
        CXXFLAGS)
            CXXFLAGS="$VALUE"
            ;;
    esac
    shift
done

if [ -z "$CC" ]; then
    CC=gcc
fi

if [ -z "$CFLAGS" ]; then
    CFLAGS="-fPIC -Wall"
fi

if [ -z "$CXX" ]; then
    CXX=g++
fi

if [ -z "$CXXFLAGS" ]; then
    CXXFLAGS="-fPIC -Wall"
fi

echo -n "" > Makefile
echo "CC=$CC" >> Makefile
echo "CFLAGS=$CFLAGS" >> Makefile
echo "CXX=$CXX" >> Makefile
echo "CXXFLAGS=$CXXFLAGS" >> Makefile
echo "PREFIX=$PREFIX" >> Makefile
echo "CXXWRAP_DIR=$CXXWRAP_DIR" >> Makefile
echo "FLINT_DIR=$FLINT_DIR" >> Makefile
echo "JULIA_DIR=$JULIA_DIR" >> Makefile
echo "SINGULAR_DIR=$SINGULAR_DIR" >> Makefile
echo "Q=$Q" >> Makefile
echo "" >> Makefile

cat Makefile.in >> Makefile
